<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#011627">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragement.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="05dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="05dp"
                    android:orientation="vertical"
                    android:padding="05dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi!"
                        android:textColor="#FFFFFF"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/c_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kritika Thapa"
                        android:textColor="#FFFFFF"
                        android:textSize="23dp" />

                    <TextView
                        android:id="@+id/c_userlocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Matatritha, Kathmandu"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/c_useremail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="thapakritika019@gmail.com"
                        android:textColor="#FFFFFF"
                        android:textSize="18dp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="125dp"
                    android:layout_margin="05dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/txtmaintemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="3dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="5dp"
                        android:text="22 C | 22 F"
                        android:textColor="#011627"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtlocation"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginEnd="53dp"
                        android:layout_marginRight="53dp"
                        android:layout_marginBottom="74dp"
                        android:padding="02dp"
                        android:text="Location"
                        android:textColor="#011627"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/img_logout"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="70dp"
                        android:src="@drawable/icon_logout" />

                    <ImageView
                        android:id="@+id/imgicon"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="23dp"
                        android:layout_marginRight="23dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/icon_weather" />
                </RelativeLayout>
            </LinearLayout>

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                app:fillColor="#0d0d0d"
                app:layout_constraintCircleRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:pageColor="#ffffff"
                app:radius="4dp"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/home_design" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/touristGuideRecycleview"
                android:background="@drawable/rounded_edt_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:src="@drawable/ads" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/home_design2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cabdetailRecycleview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="50dp"
                android:padding="10dp" />

        </LinearLayout>
    </FrameLayout>
</ScrollView>