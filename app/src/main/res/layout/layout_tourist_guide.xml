<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/design1"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/guideimg"
        android:layout_width="160dp"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="195dp"
        android:layout_marginRight="195dp"
        android:scaleType="fitXY"
        android:src="@drawable/round_outline" />


    <TextView
        android:id="@+id/guidename"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:padding="05dp"
        android:text="Anil Prasad Thapa"
        android:background="@color/white"
        android:textColor="@color/design"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/guideaddress"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guidename"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="24dp"
        android:background="@color/white"
        android:padding="05dp"
        android:text="Bhaktapur, Nepal"
        android:textColor="@color/design"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/guidecontact"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guideaddress"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:padding="05dp"
        android:text="Phone Number"
        android:background="@color/white"
        android:textColor="@color/design"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/guidelanguage"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guidecontact"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="23dp"
        android:padding="05dp"
        android:text="Nepali | English | Chinese"
        android:background="@color/white"
        android:textColor="@color/design"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/guidedesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guideimg"
        android:background="@color/white"
        android:textColor="@color/design"
        android:padding="05dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="05dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp"
        android:justificationMode="inter_word"
        android:text="lorem ipsum dolor sit amet, consectetur
adipiscing elit. vestibulum commodo libero
vel lectus porta, sed dignissim augue scelerisque.
quisque quis massa maximus, finibus magna
varius, tincidunt dui. in sit amet finibus nisi.
suspendisse pretium ultrices porta. sed vitae
pharetrami, at condimentum sapien." />

</RelativeLayout>