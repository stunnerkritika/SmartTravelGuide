<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#d1dddd"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Image_adventrousPlaces"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/imageforbackground" />

        <TextView
            android:id="@+id/AdventrousPlace_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_below="@id/Image_adventrousPlaces"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AdventrousPlaces_Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/AdventrousPlace_Name"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:text="Location"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/AdventrousPlaces_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AdventrousPlace_Name"
            android:layout_toRightOf="@id/AdventrousPlaces_Timing"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:text="Price"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/AdventrousPlaces_Timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AdventrousPlaces_Location"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:text="Time to Visit"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/AdventrousPlaces_Timing_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AdventrousPlaces_Location"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/AdventrousPlaces_Timing"
            android:drawablePadding="2dp"
            android:paddingRight="10dp"
            android:text="Timing"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/AdventrousPlaces_Dec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/AdventrousPlaces_Timing_data"
           android:layout_margin="10dp"
            android:justificationMode="inter_word"
            android:text="Description"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>