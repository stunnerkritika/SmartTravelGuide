<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:backgroundTint="#d1dddd"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/idIVhistorticalPlaces"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/imageforbackground" />

        <!--Text View to display Course Name-->
        <TextView
            android:id="@+id/HistoricaplaceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/idIVhistorticalPlaces"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/historicalLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/HistoricaplaceName"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:text="Location"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/historicalPlaces_Timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/historicalLocation"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:text="Timing"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/HistoricalPlaces_EntryFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/historicalPlaces_Timing"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:text="Entry Fee : "
            android:textColor="@color/black"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/Entryfee_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/historicalPlaces_Timing"
            android:layout_toEndOf="@id/HistoricalPlaces_EntryFee"
            android:layout_toRightOf="@id/HistoricalPlaces_EntryFee"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:text="Entry Fee Data "
            android:textColor="@color/black"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/HistoricaplaceDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/HistoricalPlaces_EntryFee"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Distance To Travel : "
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/Distance_Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/HistoricalPlaces_EntryFee"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/HistoricaplaceDistance"
            android:layout_toRightOf="@id/HistoricaplaceDistance"
            android:drawablePadding="2dp"
            android:text="Distance Data"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/HistoricalplaceDec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Distance_Data"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:justificationMode="inter_word"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:padding="10dp"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>