<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--    Login Sytem-->

    <style name="textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#90EE90</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="textview1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="usernamebox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:hint">Username</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="passwordbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:hint">Password</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:padding">15dp</item>
    </style>



    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/button_background_blue</item>

    </style>

    <style name="registerButton">

        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:text">Register</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FE5295</item>
        <item name="android:textSize">17sp</item>
    </style>



    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">#000</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="modifiedEditText" parent="parent">
        <item name="android:background">@drawable/rounded_edit_box</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
    </style>




</resources>